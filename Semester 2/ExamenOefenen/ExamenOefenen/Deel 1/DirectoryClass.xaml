<Window x:Class="ExamenOefenen.DirectoryClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenOefenen"
        mc:Ignorable="d"
        Title="DirectoryClass" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="pathTxt" HorizontalAlignment="Left" Height="29" Margin="57,107,0,0" VerticalAlignment="Top" Width="343" Text="Path"/>
        <ListBox x:Name="foldersLbl" HorizontalAlignment="Left" Height="231" Margin="57,141,0,0" VerticalAlignment="Top" Width="343"/>
        <ListBox x:Name="filesLbl"  HorizontalAlignment="Left" Height="231" Margin="412,141,0,0" VerticalAlignment="Top" Width="343" SelectionChanged="filesLbl_SelectionChanged"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="636,107,0,0" VerticalAlignment="Top" Height="29" Width="127" Click="ShowFoldersFiles"/>

    </Grid>
</Window>
