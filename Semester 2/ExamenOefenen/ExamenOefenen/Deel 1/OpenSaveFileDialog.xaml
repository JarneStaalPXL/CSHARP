<Window x:Class="ExamenOefenen.OpenSaveFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenOefenen"
        mc:Ignorable="d"
        Title="OpenSaveFileDialog" Height="450" Width="1369">
    <Grid>
        <Button Content="Load File" HorizontalAlignment="Left" Margin="30,23,0,0" VerticalAlignment="Top" Height="27" Width="73" Click="LoadFile"/>
        <Label x:Name="filePathOutput" Content="Selected Filepath" HorizontalAlignment="Left" Margin="116,23,0,0" VerticalAlignment="Top" Width="1243"/>
        <TextBox x:Name="outputBox" HorizontalAlignment="Center" Height="314" Margin="0,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1286"/>
        <Button Content="Save File" HorizontalAlignment="Left" Margin="30,55,0,0" VerticalAlignment="Top" Height="27" Width="73" Click="SaveFile"/>

    </Grid>
</Window>
