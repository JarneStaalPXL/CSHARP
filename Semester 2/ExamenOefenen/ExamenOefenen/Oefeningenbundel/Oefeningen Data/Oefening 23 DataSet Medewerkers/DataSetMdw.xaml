<Window x:Class="ExamenOefenen.Oefeningenbundel.Oefeningen_Data.Oefening_23_DataSet_Medewerkers.DataSetMdw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenOefenen.Oefeningenbundel.Oefeningen_Data.Oefening_23_DataSet_Medewerkers"
        mc:Ignorable="d"
        Title="DataSetMdw" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"></RowDefinition>
            <RowDefinition Height="160*"></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Margin="20">
            <Button Height="50" Width="150" Margin="10" Click="BtnToevoegen_Click">Medewerkers toevoegen</Button>
            <Button Margin="10" Width="150" Click="BtnMedTabel_Click">Tabel Medewerkers</Button>
        </WrapPanel>

        <StackPanel Grid.Row="1">
            <DataGrid Margin="20" x:Name="outputGrid" Height="275"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
