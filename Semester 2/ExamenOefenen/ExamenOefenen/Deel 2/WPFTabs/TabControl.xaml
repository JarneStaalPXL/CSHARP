<Window x:Class="ExamenOefenen.Deel_2.WPFTabs.TabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenOefenen.Deel_2.WPFTabs"
        mc:Ignorable="d"
        Title="TabControl" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Bestand">
                <MenuItem Header="Open" Click="OpenFile_Click"></MenuItem>
                <MenuItem Header="Opslaan" Click="SaveFile_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Label Margin="50,20,20,350">A TabControl Program</Label>
            <ListBox Margin="50" x:Name="lstBox">
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
