<Window x:Class="CS_Oefening_027.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_Oefening_027"
        mc:Ignorable="d"
        Title="Spionshop" Height="450" Width="1024" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="TxtWoonplaats" HorizontalAlignment="Left" Height="23" Margin="26,24,0,0" TextWrapping="Wrap" Text="Woonplaats" VerticalAlignment="Top" Width="120" KeyUp="TxtWoonplaats_KeyUp" />
        <ListBox x:Name="LbxWoonplaats" HorizontalAlignment="Left" Height="319" Margin="26,66,0,0" VerticalAlignment="Top" Width="206" />
        <ListBox x:Name="LbxCategorie" HorizontalAlignment="Left" Height="72" Margin="261,24,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="LbxCategorie_SelectionChanged"/>
        <DataGrid x:Name="DgArtikel" HorizontalAlignment="Left" Height="275" Margin="261,110,0,0" VerticalAlignment="Top" Width="722"/>
    </Grid>
</Window>
