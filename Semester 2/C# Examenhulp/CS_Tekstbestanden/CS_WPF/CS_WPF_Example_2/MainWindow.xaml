        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_WPF_Example_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TxtResultaat" HorizontalAlignment="Left" Height="23" Margin="166,104,0,0" TextWrapping="Wrap" Text="Standaardtekst in TxtResultaat wijzigen" VerticalAlignment="Top" Width="218" IsReadOnly="True"/>
        <Button x:Name="BtnWijzigen" Content="Hoofdletter/kleine letter wijzigen" HorizontalAlignment="Left" Margin="166,144,0,0" VerticalAlignment="Top" Width="218" Height="29" Click="BtnWijzigen_Click"/>
