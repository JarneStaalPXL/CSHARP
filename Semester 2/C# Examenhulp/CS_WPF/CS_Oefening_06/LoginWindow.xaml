<Window x:Class="CS_Oefening_06.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_Oefening_06"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">

    <DockPanel HorizontalAlignment="Left"  LastChildFill="True" VerticalAlignment="Top" Width="792">
        <Image DockPanel.Dock="left" Width="228" Source="CSharpLogo.png" Stretch="Fill" />

        <StackPanel  Width="438" Height="328" >
            <TextBlock x:Name="TextBlockUser" Text="Gebruikersnaam: " FontSize="28" FontFamily="Tempus Sans ITC"/>
            <TextBox x:Name="TxtUser" FontSize="32" FontFamily="Tempus Sans ITC" Margin="0,15,0,0" HorizontalContentAlignment="Center" Text="Tom Quareme"/>
            <TextBlock x:Name="TextBlockPassword" Text="Wachtwoord: " FontSize="28" FontFamily="Tempus Sans ITC" Margin="0,15,0,0"/>
            <PasswordBox x:Name="PwbWachtwoord" MaxLength="4" PasswordChar="*" FontSize="32" FontFamily="Tempus Sans ITC" Height="54" Margin="0,0,0.4,0"/>
            <Button x:Name="BtnOk" Content="Ok" Height="33" FontSize="16" Margin="154,50,176.4,0"  Click="BtnOk_Click" IsDefault="True"/>

        </StackPanel>
    </DockPanel>
</Window>
